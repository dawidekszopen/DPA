<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/Dystans"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Dystans"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/Czas"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Czas Trwania"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/Kalorie"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Kalorie"
        />

    <TextView
        android:id="@+id/IntensywnoscText"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intensywność: 1"
        android:textSize="25sp"
        android:layout_gravity="center"
        />
    <SeekBar
        android:min="1"
        android:max="10"
        android:id="@+id/Intensywnosc"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/Typ"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="spacer"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bieg"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trening siłowy"/>
        </RadioGroup>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/Send"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj Aktywność"/>

</LinearLayout>